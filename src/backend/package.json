{
  "name": "ami",
  "version": "0.0.1",
  "description": "Back-end приложения для здорового образа жизни ",
  "main": "app.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node app.js",
    "backend": "nodemon app.js",
    "frontend": "npm run start --prefix ../frontend",
    "frontend:install": "npm install --prefix ../frontend",
    "frontend:build": "npm run build --prefix ../frontend",
    "dev": "cross-env NODE_ENV=development concurrently \"npm run backend\" \"npm run frontend\" ",
    "test": "cross-env NODE_ENV=test mocha --timeout 10000"
  },
  "author": "Максим Хоцевич <xozewitc@yandex.ru>",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "express-validator": "^6.6.0",
    "helmet": "^3.23.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.10",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "nodemailer": "^6.4.10",
    "nodemailer-sendgrid-transport": "^0.2.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "mocha": "^8.0.1",
    "nodemon": "^2.0.3"
  }
}
